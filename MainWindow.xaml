<Window x:Class="UVS_Thread_Exercise.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UVS_Thread_Exercise"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="500">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--main app controls-->
        <Button x:Name="B_Start" Content="Start" Margin="10 5" FontSize="25" Background="Green" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Click="B_Start_Click"/>
        <Button x:Name="B_Stop" Content="Stop" Margin="10 5" FontSize="25" Background="Red" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Visibility="Collapsed" Click="B_Stop_Click"/>

        <TextBlock Text="Thread Count: " Grid.Column="1" FontSize="26" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox x:Name="TB_ThreadCount" Text="2" Grid.Column="2" Margin="10 5" Background="LightSlateGray" FontSize="25" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

        <!--Generated number List View-->
        <ListView x:Name="LV_GeneratedNumbers" ItemsSource="{Binding generated_numbers}" Grid.Row="1" Grid.ColumnSpan="3" Background="LightSlateGray" Margin="10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.2*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
